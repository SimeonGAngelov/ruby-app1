<h1>Weather</h1>

<% if @error_message.present? %>
  <div style="background:#ffe6e6; border:1px solid red; padding:10px; margin-bottom:15px;">
    <strong>Error:</strong>
    <%= @error_message %>
  </div>
<% end %>

<p>
  Logged in as <strong><%= current_user.name %></strong>
  |
  <%= button_to "Logout", session_path, method: :delete %>
  <%= button_to "Delete my account",
        user_path(current_user),
        method: :delete,
        data: { turbo_confirm: "Delete your account and all data?" } %>
</p>

<% if @error_message.present? %>
  <div style="color:red; border:1px solid red; padding:6px">
    <%= @error_message %>
  </div>
<% end %>

<h2>Search by coordinates</h2>

<%= form_with url: weather_index_path, method: :post do %>
  <div>
    <label>Latitude</label>
    <%= text_field_tag :latitude %>
  </div>

  <div>
    <label>Longitude</label>
    <%= text_field_tag :longitude %>
  </div>

  <%= submit_tag "Search & add location" %>
<% end %>

<%= turbo_frame_tag "weather_locations" do %>
  <% if @locations.empty? %>
    <hr>
    <p>No locations yet.</p>
  <% end %>

  <% @locations.each do |loc| %>
    <%= turbo_frame_tag dom_id(loc) do %>
      <hr>
      <h3>Location: (<%= loc.latitude %>, <%= loc.longitude %>)</h3>

      <% current = @current_by_location[loc.id] %>
      <% if current %>
        <p>
          Time: <%= current[:time] %><br>
          Temperature: <%= current[:temperature] %> Â°C<br>
          Wind speed: <%= current[:wind_speed] %> km/h
        </p>
      <% end %>

      <h4>History</h4>
      <table border="1" cellpadding="5">
        <thead>
          <tr>
            <th>Timestamp</th>
            <th>Temperature</th>
            <th>Wind speed</th>
          </tr>
        </thead>
        <tbody>
          <% (@records_by_location[loc.id] || []).each do |r| %>
            <tr>
              <td><%= r.timestamp %></td>
              <td><%= r.temperature_2m %></td>
              <td><%= r.wind_speed_10m %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= button_to "Delete location",
            location_path(loc),
            method: :delete,
            data: { turbo_confirm: "Delete this location and its history?" } %>
    <% end %>
  <% end %>
<% end %>
